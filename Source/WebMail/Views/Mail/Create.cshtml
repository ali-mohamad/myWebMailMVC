@model myWebMail.Models.MailItem

@{
    ViewBag.Title = "Create";
}
<h1>Mail - Inbox</h1>
<h3>Compose and send email</h3>
<div>
    @Html.ActionLink("Discard this and take me back to the list", "Index")
</div>
@using (Html.BeginForm())
{

    <hr />
    <br />

    @Html.ValidationSummary(true)

    <div class="form">
        <form class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Subject, new { @class = "control-label col-xs-2" })
                @Html.EditorFor(model => model.Subject, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Subject)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Recipients, new { @class = "control-label col-xs-2" })
                @Html.EditorFor(model => model.Recipients, new { @class = "form-control" })
                <span class="uihint">Use a semi-colon to separate email addresses.</span>
                @Html.ValidationMessageFor(model => model.Recipients)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Body, new { @class = "control-label col-xs-2" })
                @Html.EditorFor(model => model.Body, new { @class = "form-control col-xs-10" })
                @Html.ValidationMessageFor(model => model.Body)
            </div>

            <div class="form-group">
                <div class="col-xs-offset-2 col-xs-10">
                    <input type="submit" value="Send" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
}
@section Scripts
    {
    @Scripts.Render("~/bundles/jqueryval")
}
